package DAO;

import java.util.ArrayList;
import java.util.Iterator;
import org.hibernate.Query;
import hibernate.Usuario;
import hibernate.HibernateSession;

/**
 *
 * @author Pimenta
 */
public class UsuariosDAO {

    public static Usuario validaUser(String login, String senha) {
        try {
            Usuario usu = (Usuario) HibernateSession.getSession().createQuery("from Usuario where dslogin='" + login + "' and dssenha='" + senha + "'").uniqueResult();
            return usu;
        } catch (Exception e) {
            System.out.println(e.getMessage());
        }
        return null;
    }
}
